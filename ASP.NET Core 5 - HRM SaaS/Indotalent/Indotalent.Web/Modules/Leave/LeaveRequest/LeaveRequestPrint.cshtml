@model Indotalent.Leave.LeaveRequestPrintData

@if ((bool?)ViewData["Printing"] == true)
{
    Layout = "_LayoutNoNavigation";
}

<section class="invoice">
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                LEAVE REQUEST: @Model.Header.Number
                <small class="pull-right">Print at: @DateTime.Now.ToShortDateString()</small>
            </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-center">
            <h3>@Model.Header.EmployeeName</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-center">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h5>Leave Request Info</h5>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td style="width:50%">From Date:</td>
                        <td>@Model.Header.FromDate.Value.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <td>To Date:</td>
                        <td>@Model.Header.ToDate.Value.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <td>Duration:(in Days)</td>
                        <td>@Model.Header.Duration.Value</td>
                    </tr>
                    <tr>
                    </tr>
                    <tr>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
        </div>
        <div class="col-xs-6">
            <div class="row">
                <div class="col-xs-12">
                    <h5>Delegated Tasks</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Task Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.Tasks)
                            {
                                <tr>
                                    <td>@d.ShortNote</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="row">
                <div class="col-xs-12">
                    <h5>Emergency Contacts</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Contact Name</th>
                                <th>Contact Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.Contacts)
                            {
                                <tr>
                                    <td>@d.ContactName</td>
                                    <td>@d.ContactPhoneNumber</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
