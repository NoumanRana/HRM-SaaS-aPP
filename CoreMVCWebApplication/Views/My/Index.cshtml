@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome to my web app</h1>

@if (ViewBag.Name != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Name
    </div>
}

<form method="post">
    <div class="form-group col-md-12" margin-inline: 5% 10%; >
        <div class="col-md-2">  <label for="NameInput"><b>Your Name:</b></label> </div>
        <div class="col-md-8">  <input type="text" id="NameInput" name="name" class="form-control" required /></div>
      
    </div>

    <button type="submit" class="btn btn-primary" >Submit</button>
</form>
